<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Certificate Preview</title>
    <link rel="stylesheet" href="/css/root.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Merriweather:wght@400;700&family=Playfair+Display:wght@700&family=Roboto&display=swap"
      rel="stylesheet"
    />

    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        background-color: #f8fafc;
        height: 100vh;
      }

      @page {
        size: A4 landscape;
        margin: 0;
      }
    </style>
  </head>
  <body class="flex items-center justify-center">
    <div
      id="certificate"
      class="relative flex flex-col justify-center items-center text-center px-10"
      style="
        width: 1200px;
        height: 794px;
        background-image: url('/certificate-bg/<%= template %>');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
      "
    >
      <!-- SAFE ZONE -->
      <div
        class="relative w-full h-full flex flex-col justify-center items-center text-center"
        style="
          width: <%= layoutConfig.width %>;
          height: <%= layoutConfig.height %>;
          padding: <%= layoutConfig.padding %>;
        "
      >
        <!-- Certificate Main Content -->
        <div
          class="relative px-12"
          style="
            margin-top: <%= layoutConfig.certificateMainContent || '-100px' %>;
          "
        >
          <div class="grid gap-2 text-center">
            <h1
              class="text-8xl font-bold text-blue-900 uppercase font-playfair"
            >
              Certificate of Completion
            </h1>

            <p class="text-6xl text-gray-700 font-vibes">
              This certificate is awarded to
            </p>

            <!-- Decorative Line with Centered Icon -->
            <div class="flex justify-center items-center gap-2 mt-1">
              <!-- Left Line -->
              <div class="border-t border-gray-400 w-40"></div>

              <!-- Center Icon -->
              <img
                src="/icons/certificate-icon-1.png"
                alt="divider icon"
                class="h-16"
              />

              <!-- Right Line -->
              <div class="border-t border-gray-400 w-40"></div>
            </div>

            <h2 class="text-8xl font-vibes text-black"><%= name %></h2>

            <!-- <p class="text-base">For successfully completing</p> -->
            <p class="text-xl italic text-gray-800"><%= title %></p>
          </div>
        </div>

        <!-- Signature + Date Block -->
        <div
          class="absolute w-full flex justify-between items-center px-14"
          style="bottom: <%= layoutConfig?.signatureBlockBottom || '70px' %>"
        >
          <!-- Date Block -->
          <div class="relative flex items-center space-x-2">
            <p class="text-xs text-gray-600 uppercase font-merriweather">
              Date
            </p>
            <div class="relative">
              <div class="w-60 border-t border-gray-400"></div>
              <p
                class="absolute -top-5 left-0 font-merriweather text-gray-800 text-xl font-semibold"
              >
                <%= date %>
              </p>
            </div>
          </div>

          <!-- Signature Block -->
          <div class="relative flex items-center space-x-2">
            <p class="text-xs text-gray-600 uppercase font-merriweather">
              Signature
            </p>
            <div class="relative">
              <div class="w-60 border-t border-gray-400"></div>
              <p
                class="absolute -top-6 left-0 font-bold text-gray-800 font-vibes text-3xl"
              >
                <%= signature %>
              </p>
            </div>
          </div>
        </div>

        <!-- Footer Text -->
        <div
          class="absolute text-right"
          style="
            bottom: <%= layoutConfig.footerBottom || '70px' %>;
            right: <%= layoutConfig.footerRight || '70px' %>;
          "
        >
          <p class="text-xs text-gray-400 italic">Generated by Veribly</p>
        </div>
      </div>
    </div>
  </body>
</html>
