<div
  class="form-container grid place-items-center min-h-[calc(80dvh-4rem)]"
>
  <form
    action="/login"
    method="POST"
    class="form grid gap-4 bg-white p-8 rounded-lg shadow-md w-full max-w-3xl"
  >
    <h1>LOGIN</h1>
    <input type="text" name="name" id="name" placeholder="Full Name" required />
    <input type="text" name="email" id="email" placeholder="Email" required />
    <input
      type="password"
      name="password"
      id="password"
      placeholder="Password"
      required
    />
    <button type="submit">Login</button>
  </form>
</div>
