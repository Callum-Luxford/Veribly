<section class="create-form section bg-theme_clr_1" id="create-form">
  <section class="section-inner">
    <div class="grid grid-cols-1 gap-10 mb-16">
      <!-- Title + Subtitle -->
      <div class="flex flex-col gap-5 text-center mb-8">
        <h1 class="section-title mb-0 text-text_clr_1">
          <span class="gradient-text">Create</span> Your Certificate
        </h1>
        <p class="create-form-p">
          Select a template, enter details, and download your certificate in
          seconds.
        </p>
      </div>

      <!-- Template Previews -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div
          class="card-gradient-border-template relative card-gradient-border-template-active"
          data-template="certificate-1"
        >
          <div
            class="card template-img-container p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-1-example.png"
              alt="Certificate Template"
              class="template-img"
            />
          </div>
        </div>
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-2"
        >
          <div
            class="card template-img-container p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-2-example.png"
              alt="Certificate Template"
              class="template-img"
            />
          </div>
        </div>
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-3"
        >
          <div
            class="card template-img-container p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-3-example.png"
              alt="Certificate Template"
              class="template-img"
            />
          </div>
        </div>
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-4"
        >
          <div
            class="card template-img-container p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-4-example.png"
              alt="Certificate Template"
              class="template-img"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Local Spinner for PDF generation -->
    <div
      id="pdf-loading-spinner"
      class="w-full flex flex-col items-center py-10 gap-4 hidden"
    >
      <!-- Spinner Circle -->
      <div
        class="w-10 h-10 border-4 border-t-transparent border-white rounded-full animate-spin"
      ></div>

      <!-- Text -->
      <span class="text-white text-xl">Generating PDF...</span>
    </div>

    <div id="form-wrapper" class="">
      <!-- Form -->
      <div class="gradient-border-wrapper w-full mx-auto">
        <form
          action="/api/generate-certificate"
          method="POST"
          class="mx-auto bg-form_clr_1 p-6 rounded-lg text-text_clr_1 flex flex-col gap-8"
          id="home-cert-form"
        >
          <!-- Name -->
          <div>
            <label for="name" class="block font-semibold mb-2">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              required
              placeholder="e.g. John Smith"
              class="w-full px-4 py-3 border-transparent"
            />
          </div>

          <!-- Title -->
          <div>
            <label for="title" class="block font-semibold mb-2">Title</label>
            <input
              type="text"
              name="title"
              id="title"
              required
              placeholder="e.g. Certificate of Completion"
              class="w-full px-4 py-3 border-transparent"
            />
          </div>

          <!-- Date -->
          <div>
            <label for="date" class="block font-semibold mb-2">Date</label>
            <input
              type="date"
              name="date"
              id="date"
              class="w-full px-4 py-3 border-transparent"
            />
          </div>

          <!-- Signature -->
          <div>
            <label for="signature" class="block font-semibold mb-2"
              >Signature</label
            >
            <input
              type="text"
              name="signature"
              id="signature"
              placeholder="e.g. Jane Doe"
              class="w-full px-4 py-3 border-transparent"
            />
          </div>

          <input
            type="hidden"
            name="template"
            id="selectedTemplate"
            value="certificate-1"
          />

          <!-- Submit -->
          <div class="text-center pt-4">
            <button
              id="home-form-submit"
              type="submit"
              class="btn-primary-shadow btn-primary"
            >
              Create PDF
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Preview Section -->
    <div id="preview-area" class="hidden text-center grid gap-8">
      <div class="flex flex-col gap-1">
        <h2 class="text-4xl font-bold text-text_clr_1">PDF Generated</h2>
        <p class="text-text_clr_2 text-2xl m-0 p-0 leading-tight">
          Your file is ready to download
        </p>
      </div>

      <!-- Gradient Border Wrapper for iframe -->
      <div
        class="gradient-border-wrapper w-full max-w-4xl mx-auto rounded-lg overflow-hidden"
      >
        <div
          class="pdf-preview-container rounded-lg overflow-hidden bg-[#0a0a0a]/80 backdrop-blur-md w-full aspect-[11/8.5]"
        >
          <!-- <iframe id="pdf-preview" class="w-full h-full" src=""></iframe> -->
          <!-- Desktop iframe -->
          <iframe id="pdf-preview" class="w-full h-full" src=""></iframe>

          <!-- Mobile/touch fallback image -->
          <img
            id="pdf-preview-img"
            class="w-full h-full hidden object-cover"
            alt="PDF Preview"
          />
        </div>
      </div>

      <div class="flex justify-center gap-4">
        <a id="download-link" class="btn-primary" download target="_blank">
          Download PDF
        </a>
        <button id="generate-new" class="btn-secondary">
          Generate Another PDF
        </button>
      </div>
    </div>
  </section>
</section>
