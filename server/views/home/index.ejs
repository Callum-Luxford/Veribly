<section class="create-form section bg-theme_clr_1">
  <section class="section-inner">
    <div class="grid grid-cols-1 gap-10 mb-16">
      <!-- Title + Subtitle -->
      <div class="flex flex-col gap-5 text-center mb-8">
        <h1 class="section-title section-title mb-0 text-text_clr_1">
          <span class="gradient-text">Create</span> Your Certificate
        </h1>
        <p class="create-form-p">
          Select a template, enter details, and download your certificate in
          seconds.
        </p>
      </div>

      <!-- Template Previews -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-1"
        >
          <div
            class="card p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-1.png"
              alt="Certificate Template"
              class="relative z-10 w-[95%] h-auto object-contain rounded-xl"
            />
          </div>
        </div>
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-2"
        >
          <div
            class="card p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-1.png"
              alt="Certificate Template"
              class="relative z-10 w-[95%] h-auto object-contain rounded-xl"
            />
          </div>
        </div>
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-3"
        >
          <div
            class="card p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-1.png"
              alt="Certificate Template"
              class="relative z-10 w-[95%] h-auto object-contain rounded-xl"
            />
          </div>
        </div>
        <div
          class="card-gradient-border-template relative"
          data-template="certificate-4"
        >
          <div
            class="card p-2 sm:p-4 flex items-center justify-center overflow-hidden"
          >
            <!-- Glow shadow -->
            <div class="glow-form absolute -inset-1 z-0 rounded-2xl"></div>

            <!-- Certificate -->
            <img
              src="/images/certificate-1.png"
              alt="Certificate Template"
              class="relative z-10 w-[95%] h-auto object-contain rounded-xl"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="gradient-border-wrapper w-full mx-auto">
      <form
        action="/api/generate-certificate"
        method="POST"
        class="mx-auto bg-form_clr_1 p-6 rounded-lg text-text_clr_1 flex flex-col gap-8"
      >
        <!-- Name -->
        <div>
          <label for="name" class="block font-semibold mb-2">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            required
            placeholder="e.g. John Smith"
            class="w-full px-4 py-3 border-transparent"
          />
        </div>

        <!-- Title -->
        <div>
          <label for="title" class="block font-semibold mb-2">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            required
            placeholder="e.g. Certificate of Completion"
            class="w-full px-4 py-3 border-transparent"
          />
        </div>

        <!-- Date -->
        <div>
          <label for="date" class="block font-semibold mb-2">Date</label>
          <input
            type="date"
            name="date"
            id="date"
            class="w-full px-4 py-3 border-transparent"
          />
        </div>

        <!-- Signature -->
        <div>
          <label for="signature" class="block font-semibold mb-2"
            >Signature</label
          >
          <input
            type="text"
            name="signature"
            id="signature"
            placeholder="e.g. Jane Doe"
            class="w-full px-4 py-3 border-transparent"
          />
        </div>

        <input type="hidden" name="template" id="selectedTemplate" value="" />

        <!-- Submit -->
        <div class="text-center pt-4">
          <button type="submit" class="btn-primary-shadow btn-primary">
            Create PDF
          </button>
        </div>
      </form>
    </div>
  </section>
</section>
