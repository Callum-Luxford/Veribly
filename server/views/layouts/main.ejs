<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Veribly</title>
    <link rel="icon" href="#" />
    <link rel="stylesheet" href="/css/root.css" />
  </head>

  <body class="min-h-screen overflow-y-auto overflow-x-hidden">
    <%- include('../partials/header') %> <% if (successMsg) { %>
    <div class="scroll-wrapper min-h-screen overflow-x-hidden overflow-y-auto">
      <div class="flash flash-success"><%= successMsg %></div>
      <% } %> <% if (errorMsg) { %>
      <div class="flash flash-error"><%= errorMsg %></div>
      <%} %>

      <main class="mx-auto w-full"><%- body %></main>

      <%- include('../partials/footer') %>

      <div
        id="nav-overlay"
        class="hidden fixed inset-0 z-40 bg-gradient-to-b from-black/60 to-black/90 backdrop-blur-md transition-opacity duration-300 md:hidden"
      ></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="/js/particles-init.js"></script>
    <script type="module" src="/js/main.js"></script>
    <script src="/js/scroll.js"></script>
  </body>
</html>
