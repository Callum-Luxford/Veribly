<header
  id="site-header"
  class="section fixed top-0 left-0 z-10 bg-them_clr_1 bg-gradient-to-b from-black via-black/70 to-black/20"
>
  <!-- <div
    id="nav-overlay"
    class="hidden bg-gradient-to-b from-black/60 to-black/90 backdrop-blur-md z-40 transition-opacity duration-300 md:hidden"
  ></div> -->
  <div
    class="max-w-screen-2xl mx-auto w-full flex justify-between items-center py-4"
  >
    <a
      href="/"
      class="gradient-text logo font-bold text-2xl flex items-center text-text_clr_1"
    >
      Veribly<span class="relative -top-2 left-0.5"
        ><img src="/images/veribly-logo-check.png" alt="check-icon" class="h-6"
      /></span>
    </a>

    <div
      id="menu-toggle"
      class="md:hidden text-2xl cursor-pointer z-100 relative flex"
    >
      <span id="menu-icon" class="icon-gradient block"></span>
      <span
        id="close-icon"
        class="icon-gradient-close hidden transition-transform duration-300"
      ></span>
    </div>

    <ul
      id="nav-menu"
      class="header-nav flex flex-col items-center justify-center gap-4 fixed top-0 right-0 h-screen w-2/3 font-medium bg-[var(--theme-clr-6)] text-text_clr_1 nav-shadow transform translate-x-full transition-transform duration-300 ease-in-out z-50 md:static md:flex-row md:translate-x-0 md:bg-transparent md:shadow-none md:h-auto md:w-auto md:text-text_clr_1 btn text-xl"
    >
      <li><a class="nav-link" href="/">Home</a></li>
      <li><a class="nav-link" href="/pricing">Pricing</a></li>
      <% if (!user) { %>
      <li><a class="nav-link" href="/auth/login">Login</a></li>
      <li class="flex items-center">
        <a
          class="nav-link md:hover:text-text_clr_1 md:header-btn md:btn-primary btn header-btn-hover-small no-gradient"
          href="/auth/register"
          >Sign up free</a
        >
      </li>
      <% } else { %>
      <li><a class="nav-link" href="/auth/logout">Logout</a></li>
      <% } %>
    </ul>
  </div>
</header>
