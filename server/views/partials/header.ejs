<header class="w-full px-4 bg-theme_clr_2">
  <div
    class="max-w-screen-2xl mx-auto w-full flex justify-between items-center py-4"
  >
    <div class="logo font-bold text-xl">Veribly</div>

    <div
      id="menu-toggle"
      class="md:hidden text-2xl cursor-pointer z-50 relative"
    >
      <img
        src="/icons/menu.png"
        alt="Open Menu"
        id="menu-icon"
        class="h-5 block"
      />
      <img
        src="/icons/close.png"
        alt="Close Menu"
        id="close-icon"
        class="h-5 hidden"
      />
    </div>

    <ul
      id="nav-menu"
      class="header-nav flex flex-col items-center justify-center gap-4 fixed top-0 right-0 h-full w-2/3 bg-white text-black shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out z-25 md:static md:flex-row md:translate-x-0 md:bg-transparent md:shadow-none md:h-auto md:w-auto"
    >
      <li><a href="/">Home</a></li>
      <li><a href="/pricing">Pricing</a></li>
      <% if (!user) { %>
      <li><a href="/auth/login">Login</a></li>
      <% } else { %>
      <li><a href="#">Logout</a></li>
      <% } %>
    </ul>
  </div>
</header>
